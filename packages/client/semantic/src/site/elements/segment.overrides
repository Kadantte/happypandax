/*******************************
         Site Overrides
*******************************/

.ui.secondary.segment.segment.segment.segment.segment:not(.inverted) {
    border-top: none;
}

.ui.segment.fluid {
    width: 100%;
}

.ui.segment.swiper {
    padding-top: 1em;
    padding-bottom: 1em;
    padding-left: 0;
    padding-right: 0;
}

.ui.segment.swiper.padded {
    padding-top: 2em;
}


.ui.segment.swiper.secondary {
    padding-top: 1em;
}

.ui.segment.swiper.tertiary {
    padding-top: 1em;
}

.ui.piled.segments::after, .ui.piled.segments::before, .ui.piled.segment::after, .ui.piled.segment::before {
    border-width: 2px;
}

.ui.piled.segments::after, .ui.piled.card.segment::after {
    transform: rotate(3.2deg);
}

.ui.piled.segments::before, .ui.piled.card.segment::before {
    transform: rotate(-3.2deg);
}

.ui.piled.card.segment {
    border: 2px solid #D8DEE2;
}

.ui.stacked.segment.card {
    padding-bottom: unset;
}

.ui.stacked.segments::before, .ui.stacked.segments::after, .ui.stacked.segment::before, .ui.stacked.segment::after {
    border-top: 1.5px double rgba(34, 36, 38, 0.15);
    bottom: -4px;
    height: 8px;
}