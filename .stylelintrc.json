{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": [
    "**/*/*.js",
    "**/*/*.ts",
    "**/*/*.tsx",
    "**/*/*.json",
    "**/*.css",
    "**/*/node_modules",
    "**/*/lib",
    "**/*/build"
  ]
}
